<div class = "section">
  <div class = "container">
    <div class = "columns is-centered">
      <div class = "column is_4">

<h2 class = "title is-2">Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>


		<div class="field">
	  	<div class="control">
	    <%= f.input :name, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>

  <div class = "field">
    <div class = "control">
    <%= f.input :email, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    </div>
</div>

      <div class = "field">
  <div class = "control">
    <%= f.input :password, required: true, wrapper: false, label_html: { class:"label" },input_html: { autocomplete: "new-password", class: "input" } %>

</div>
<small class="form-text text-muted"><%= ("Leave blank if you don't want to change it") %></small>
</div>

<div class = "field">
<div class = "control">
    <%= f.input :password_confirmation, required: false, wrapper: false, label_html: { class:"label" }, input_html: { autocomplete: "new-password", class: "input" } %>
</div>
</div>

<div class = "field">
<div class= "control">
    <%= f.input :current_password,required: true, wrapper: false, input_html: { autocomplete: "current-password", class: "input" }, label_html: {class:"label"} %>
  </div>
  <small class = "form-text text-muted"> <%= ( "We need your current password to confirm your changes") %></small>
 <div>

  <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    
  <div class="field">
			<div class="control">
		 		<%= f.button :submit, "Update", class:"button is-primary submit" %>
		 	</div>
		</div>
<% end %>

<h3 class = "cancel">Cancel my account</h3>

<p class = "cancel unhappy">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
