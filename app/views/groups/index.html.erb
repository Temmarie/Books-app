<div class="nav container-fluid h-100vh">
  <h3 class="text-white center-nav">  Your Groups </h3>
</div>


<div class="card">
  <div class="card-horizontal">
    <div class="card-body">
      <h4 class="card-title text-muted">You have created <%= pluralize(@groups.count, "group") %>: </h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 mt-3 text-center">
			<% @groups.each do |group|%>
        <div class="card mb-3">
          <div class="card-horizontal">
            <div class="card-body">
              <h4 class="card-title"> <%= link_to group.name, group_path(group), class:"text-decoration-none text-muted" %></h4>
              <p class="card-text  text-muted "> <strong> Number of books: </strong> <%= group.books.count %> </p>
            </div>
          </div>
          <div class="card-footer">
            <small class="text-muted">Created <%= time_ago_in_words(group.created_at)%> ago </small>
          </div>
        </div>
			<% end %>
			<div class="text-center my-5">
       <i class="fa fa-plus icon" aria-hidden="true"></i>
				<%= link_to "New Group", new_group_path, class: 'btn btn-success text-white h3'%>
			</div>
		</div>
  </div>
</div>
   