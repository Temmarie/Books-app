<div class="section">
  <div class="container">
	  <div class="columns is-centered">

		  <div class="column is-4">
      <%= simple_form_for([@book, @book.reviews.build]) do |f| %>
          <%= f.label :rating %>

      <div class="field test-group">
        
          <%= f.radio_button :rating, 1 %>
          <%= f.label :rating, value: 1 do %>
            <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>

      <%= f.radio_button :rating, 2 %>
          <%= f.label :rating, "2", value: 2 do %>
            <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>

          <%= f.radio_button :rating, 3 %>
          <%= f.label :rating, "3", value: 3 do %>
            <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>
          
          <%= f.radio_button :rating, 4 %>
          <%= f.label :rating, "4", value: 4 do %>
            <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>

          <%= f.radio_button :rating, 5 %>

          <%= f.label :rating, "5", value: 5 do %>
            <i class="fa fa-star" aria-hidden="true"></i>
          <% end %>
      </div>


        <%= f.input :comment %>
        <%= f.button :submit, class: "submit" %>

      <% end %>
      
      </div>
    </div>
  </div>
</div>


